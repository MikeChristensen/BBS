            WriteConfig
         case "A"
            PLocate 15, 36
            SetInitialString(cf.AnsiHighScores)
            cf.AnsiHighScores = InputString(50)
            WriteConfig
         case "B"
            PLocate 16, 36
            SetInitialString(cf.AnsiStatus)

            WriteConfig
         case "3"
            PLocate 6, 36
            SetInitialString(str(cf.MaxIncorrectWords))
            cf.MaxIncorrectWords = abs(val(InputString(5)))
            WriteConfig
         case "4"
            PLocate 7, 36
            SetInitialString(str(cf.MaxDaysIdle))

                        UpdateGame(CurGame)
                     else
                        PLocate 5, 23
                        print "@0C@Error@04@: @07@User Already Exists In This Game@08@!                           ";
                        sleep(2000)
                     end if
                  else
                     PLocate 5, 23
                     print "@0C@Error@04@: @07@Invalid User Name@08@!                           ";

      print "@0B@(@03@A@08@-@03@Z@0B@) @03@Place Tile";
      PLocate 21,4
      print "@0B@(@03@!@0B@) @03@Concede  @0B@(@03@@@0B@) @03@Pass Turn  @0B@(@03@#@0B@) @03@Shuffle Tiles@0B@(@03@%@0B@) @03@Discard Tile(s)"
      VerifyPlay = false
      exit function
   else

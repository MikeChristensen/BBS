   end if
   
   for TestLined = 0 to WhichPlay.LettersPlaced - 1
      if OkayPos(WhichGame, WhichPlay, WhichPlay.TilesPlaced(TestLined).XCor, WhichPlay.TilesPlaced(TestLined).YCor) then
         ValidTilePos = true

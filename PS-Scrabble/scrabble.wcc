               do : loop until ReadKey(100) > 0
            end if
            WriteConfig
         case "2"
            PLocate 5, 36
            SetInitialString(str(cf.MaxGamesPerPlayer))
            cf.MaxGamesPerPlayer = abs(val(InputString(5)))
            if not regged and cf.MaxGamesPerPlayer > 2 then
               PLocate MAXLINE_LENGTH, 1

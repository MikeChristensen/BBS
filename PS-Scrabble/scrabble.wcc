         print "             @0F@A@07@         A         A         A"
         print " @0F@HO@0B@R@0F@N@07@      HO@0F@R@07@N      HORN      HOR@0F@N@07@      HORN"
         print "             @0F@M@07@         M         @0F@MOB@07@       MOB"

      else
         print "@03@[@0F@ R@03@]  @0F@Remove User From Game (Concede)"
      end if
      
      if CurGame.Player(WhichPlayer - 1).ID <> 0 then
         print "@03@[@0F@ W@03@]  @0F@Wildcat! User Editor"
